Class {
	#name : #TUIDemoRoot,
	#superclass : #WAComponent,
	#instVars : [
		'currentDemo'
	],
	#category : #'Toast-UI-Demo'
}

{ #category : #versions }
TUIDemoRoot class >> initialize [
	"WAAdmin applicationDefaults removeParent: WADevelopmentConfiguration instance."
	(WAAdmin register: self asApplicationAt: 'TUIEditorDemo')
		addLibrary: JQDeploymentLibrary;
		addLibrary: TUILibrary  
]

{ #category : #versions }
TUIDemoRoot class >> version [
	^ 'v0.0.1'
]

{ #category : #updating }
TUIDemoRoot >> currentDemo [
	^ currentDemo
]

{ #category : #updating }
TUIDemoRoot >> currentDemo: anObject [
	currentDemo := anObject
]

{ #category : #updating }
TUIDemoRoot >> initialize [
	super initialize.
	self currentDemo: MEditorSimpleDemo new
]

{ #category : #updating }
TUIDemoRoot >> renderContentOn: html [
	html div
		class: 'tui-demo';
		with: [ self renderDemoListOn: html.
			(html tag: 'main')
				with: [ html div: 'Note: We''re not affiliated with Medium.com'.
					html div
						class: 'meditor-demo-page';
						with: [ html render: self currentDemo ] ] ]
]

{ #category : #updating }
TUIDemoRoot >> renderDemoListOn: html [
	html div
		class: 'tui-demo-list';
		with: [ html unorderedList: [ MEditorAbstractDemo allSubclasses do: [ :aDemoClass | self renderDemosListItemFor: aDemoClass on: html ] ] ]
]

{ #category : #updating }
TUIDemoRoot >> renderDemosListItemFor: aDemoClass on: html [
	html listItem
		class: 'tui-demo-list-item_active' if: aDemoClass = self currentDemo class;
		with: [ html anchor
				callback: [ self currentDemo: aDemoClass new ];
				with: [ html span: aDemoClass title ] ]
]

{ #category : #updating }
TUIDemoRoot >> style [
	^ 'body, html{
	margin: 0;
	height: 100%;
	width: 100%;
	font-size: 14px;
	font-weight: 400;
	line-height: 20px;
	color: #757575;
	font-family: ''Roboto'',''Helvetica'',''Arial'', sans-serif;
}
	
.tui-demo{
	display: flex;
	display: -webkit-flex;
	display: -ms-flexbox;
	background: #fafafa;
	height: 100%;
	width: 100%;
}

.tui-demo-list{
	width: 225px;
	height: 100%;
	background-color: #FFF;
	box-shadow: 0 4px 5px 0 rgba(0,0,0,.14),0 1px 10px 0 rgba(0,0,0,.12),0 2px 4px -1px rgba(0,0,0,.2);
}

.tui-demo-list ul{
	padding-left: 0;
	font-size: 14px;
	line-height: 24px;
	font-weight: 400;
	letter-spacing: 0;
}

.tui-demo-list li{
	-webkit-transition: all 450ms cubic-bezier(.23, 1, .32, 1) 0ms;
	transition: all 450ms cubic-bezier(.23, 1, .32, 1) 0ms;
	width: 100%;
	line-height: 0;
}

.tui-demo-list li a{
	padding-left: 15px;
	font-size: 16px;
	font-weight: inherit;
	display: -webkit-flex;
	color: rgba(0,0,0,0.87);
	text-decoration: none;
	white-space: nowrap;
	cursor: pointer;
}

.tui-demo-list li a:hover{
	background-color: #eee;
}

.tui-demo-list li a span{
	line-height: 60px;
}

.tui-demo-list-item_active{
	background-color: rgba(206,147,216 ,1);
}

.tui-demo-list li.tui-demo-list-item_active a:hover{
	background-color: rgba(186,104,200 ,1);
}

.tui-demo-list li.tui-demo-list-item_active a{
	color: #FFF;
}

.tui-demo main{
	display: inline-block;
	-webkit-flex-grow: 1;
	-ms-flex-positive: 1;
	flex-grow: 1;
	overflow: auto;
}

.tui-demo-page{
	padding: 16px;
}

.tui-demo-page-title{
	margin-bottom: 60px;
	margin-left: 32px;
	text-align: justify;
}

.tui-demo-page-title h3{
	font-size: 16px;
	font-weight: 600;
	margin-top: 80px;
	text-transform: uppercase;
	color: rgba(0,0,0,.54);
	line-height: 40px;
}

.tui-demo-page-title p{	
	margin-top: 16px;
	margin-bottom: 16px;
	font-size: 13px;
	max-width: 640px;
}

.tui-demo-snippet-group{
	width: 100%;
	overflow: hidden;
	display: flex;
	display: -webkit-flex;
	display: -ms-flexbox;
	flex-direction: column;
}

.tui-demo-snippet-demo pre, .tui-demo .minimap-container{
	height: 400px;
	box-shadow: 0 4px 5px 0 rgba(0,0,0,.14),0 1px 10px 0 rgba(0,0,0,.12),0 2px 4px -1px rgba(0,0,0,.2);
	margin-bottom: 50px;
}

.tui-demo pre{
	margin-top: 0;
	margin-bottom: 0;
	padding-top: 0;
	padding-bottom: 0;
}

.tui-demo .minimap-container pre{
	width: initial;
}

.tui-editable { 
	box-shadow: 2px 2px 5px #8c8c8c;
	margin: 5px 10px;
 	padding: 10px;
 }
'


]

{ #category : #updating }
TUIDemoRoot >> updateRoot: anHtmlRoot [
	super updateRoot: anHtmlRoot.
	anHtmlRoot title: 'TOAST UI Editor Demo - ' , self class version
]
